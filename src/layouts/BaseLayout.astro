---
import '../styles/global.css';
import { getTranslation } from '../i18n/translations.js';

interface Props {
  title: string;
  description: string;
  lang?: string;
}

const { title, description, lang = 'en' } = Astro.props;
const t = getTranslation(lang);
---

<!DOCTYPE html>
<html lang={lang}>
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="description" content={description} />
  <title>{title}</title>
  
  <!-- Favicon -->
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  
  <!-- Open Graph -->
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:type" content="website" />
</head>
<body class="min-h-screen flex flex-col">
  <!-- Brand Bar (Gap Style) -->
  <div class="brand-bar">
    <div class="container-custom flex justify-center items-center gap-8">
      <a href="https://openclaw.resultmarketing.asia" class="hover:text-orange-500">{t.brandBar.openclaw}</a>
      <a href="#" class="active">{t.brandBar.tech}</a>
    </div>
  </div>

  <!-- Main Navigation -->
  <header class="bg-white border-b border-gray-100 sticky top-0 z-40">
    <div class="container-custom py-4 flex items-center justify-between">
      <!-- Logo -->
      <a href={`/${lang}`} class="flex items-center gap-2">
        <span class="text-3xl">üêô</span>
        <span class="font-heading font-bold text-xl text-blue-600">Result Tech</span>
      </a>

      <!-- Nav Links (Desktop) -->
      <nav class="hidden md:flex items-center gap-6">
        <a href={`/${lang}#services`} class="text-gray-600 hover:text-blue-600">{t.nav.services}</a>
        <a href={`/${lang}#pricing`} class="text-gray-600 hover:text-blue-600">{t.nav.pricing}</a>
        <a href={`/${lang}#faq`} class="text-gray-600 hover:text-blue-600">{t.nav.faq}</a>
      </nav>

      <!-- Right Side: Language + CTA -->
      <div class="flex items-center gap-4">
        <!-- Language Switcher -->
        <div class="lang-switcher hidden sm:flex items-center">
          <a href="/en" class:list={[lang === 'en' && 'active']}>EN</a>
          <span class="text-gray-300">|</span>
          <a href="/ms" class:list={[lang === 'ms' && 'active']}>BM</a>
          <span class="text-gray-300">|</span>
          <a href="/zh" class:list={[lang === 'zh' && 'active']}>‰∏≠Êñá</a>
        </div>

        <!-- CTA Button -->
        <a 
          href="https://wa.me/60175032281?text=TECH"
          target="_blank"
          class="btn btn-whatsapp hidden sm:inline-flex text-sm px-4 py-2"
        >
          WhatsApp
        </a>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <main class="flex-grow">
    <slot />
  </main>

  <!-- Footer -->
  <footer class="bg-gray-900 text-white py-12">
    <div class="container-custom">
      <div class="grid md:grid-cols-3 gap-8">
        <!-- Brand -->
        <div>
          <div class="flex items-center gap-2 mb-4">
            <span class="text-2xl">üêô</span>
            <span class="font-heading font-bold text-xl">Result Tech</span>
          </div>
          <p class="text-gray-400 text-sm">Automation & AI Services by Result Marketing</p>
        </div>

        <!-- Other Brands -->
        <div>
          <h4 class="font-bold mb-4">{t.footer.brands}</h4>
          <ul class="space-y-2 text-gray-400">
            <li><a href="https://openclaw.resultmarketing.asia" class="hover:text-orange-400">OpenClaw - AI Setup</a></li>
            <li><a href="#" class="text-blue-400">Result Tech - Automation</a></li>
          </ul>
        </div>

        <!-- Contact -->
        <div>
          <h4 class="font-bold mb-4">{t.nav.contact}</h4>
          <ul class="space-y-2 text-gray-400">
            <li>üì± 017-503 2281</li>
            <li>üí¨ wa.me/60175032281</li>
          </ul>
        </div>
      </div>

      <!-- Disclaimer -->
      <div class="border-t border-gray-800 mt-8 pt-6 text-center">
        <p class="text-gray-500 text-xs max-w-2xl mx-auto mb-4">
          {t.footer.disclaimer}
        </p>
        <p class="text-gray-600 text-sm">{t.footer.copyright}</p>
      </div>
    </div>
  </footer>

  <!-- WhatsApp Floating Button -->
  <a 
    href="https://wa.me/60175032281?text=TECH"
    target="_blank"
    class="whatsapp-float"
    aria-label="WhatsApp"
  >
    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
      <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
